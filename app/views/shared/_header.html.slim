header.navbar.navbar-default.navbar-static-top role = "navigation" style=("background-color:rgba(0,0,0,0)")  class='star-bg'
  /.container
    .col-xs-2
      a.logo href='#{root_path}'
        img alt="" src="img/logo.png" /
    ul.nav.navbar-nav#index_menu
      = top_nav_link(t('header.market'), market_path(current_market.id), 'exchange', target: true) if current_user
      = top_nav_link(t('header.funds'), funds_path, 'money', controllers: ['funds']) if current_user
      = top_nav_link(t('header.history'), order_history_path, 'book', controllers: ['history']) if current_user

    /- if @show_index_menu
      ul#menu.nav.navbar-nav.navbar-left
        a.navbar-brand href='#{root_path}': img src="/languages/logo_new.png" alt="Cryex24"
      #index_menu
        a.index_menu_item href='#home' HOME
        a.index_menu_item href='#about-us' About us
        a.index_menu_item href='#statistic' Statistic
        a.index_menu_item href='#description' Description
    /- else
      ul#menu.nav.navbar-nav.navbar-left
        /a.navbar-brand href='#{root_path}' Cryex24
        a.navbar-brand href='#{root_path}': img src="/languages/logo_new.png" alt="Cryex24"
        = top_nav_link(t('header.market'), market_path(current_market.id), 'exchange', target: true) if current_user
        = top_nav_link(t('header.funds'), funds_path, 'money', controllers: ['funds']) if current_user
        / = top_nav_link(t('header.assets'), exchange_assets_path, 'bar-chart-o')  if current_user
        / = top_nav_link(t('header.assets'), exchange_assets_path, 'bar-chart-o')
        = top_nav_link(t('header.history'), order_history_path, 'book', controllers: ['history']) if current_user

    ul.nav.navbar-nav.navbar-right
      = render partial: 'shared/header_account_balance' if current_user && controller_name == 'markets'
      = render partial: 'shared/header_profile_setting' if current_user
      /= top_nav_link(t('header.market'), market_path(current_market.id), 'exchange', target: true)

      = top_nav_link(t('header.signin'), signin_path, '') unless current_user
      = top_nav_link(t('header.signup'), signup_path, '') unless current_user
      = render partial: 'shared/header_lang_sel'
  .s-content
    .container-fluid
      .row
        .col-xs-2
          a.logo href='#{root_path}'
            img alt="" src=image_url("logo.png") /
        ul.nav.navbar-nav#index_menu.col-xs-4.tac
          = top_nav_link(t('header.market'), market_path(current_market.id), 'exchange', target: true) if current_user
          = top_nav_link(t('header.funds'), funds_path, 'money', controllers: ['funds']) if current_user
          = top_nav_link(t('header.news'), '', 'newspaper-o', controllers: ['news']) if current_user
          = top_nav_link(t('header.history'), order_history_path, 'book', controllers: ['history']) if current_user

        ul.nav.navbar-nav.navbar-right
          /= render partial: 'shared/header_account_balance' if current_user && controller_name == 'markets'
          = render partial: 'shared/header_profile_setting' if current_user
          = top_nav_link(t('header.signin'), signup_path, '') unless current_user
          = top_nav_link(t('header.signup'), signup_path, '') unless current_user
          /= render partial: 'shared/header_lang_sel'
          /a.tm-but.wcolor.mr15 href=""  Create an account
          /a.tm-but href=""  sign in